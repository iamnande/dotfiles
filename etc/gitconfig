#
# git: core configs
#
[alias]
    # commit everything
    ca = !git add -A && git commit -av

    # switch to new branch, create if necessary
    go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"

    # view pretty, abbreviated commit history, with sha
    lg = log --pretty=oneline -n 20 --graph --abbrev-commit

    # view shortened status
    stat = status -s

[commit]
    gpgsign = true

[core]
    # change default editor
    editor = vim

    # use pretty pager
    pager = less -FRX
    autocrlf = input
    excludesfile = ~/.gitignore

[diff]
    # detect copies as well as renames
    renames = copies

[gpg]
    program = /usr/bin/gpg

[help]
    autocorrect = 1

[init]
  defaultBranch = main

[push]
    default = matching

#
# git: user settings
#
[user]
    email = engineering@morethq.com
    name = Nick Anderson
    signingkey = FCD610793666BCEF